// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  ID_Usuario Int @id @default(autoincrement())
  Email String @unique
  Nome  String
  Senha String
  isAdmin Boolean @default(false)
  Foto  String?
  Musicas Musica[]
}

model Musica {
  ID_Musica Int @id @default(autoincrement())
  Nome String
  Artista Artista @relation(fields: [ArtistaID], references: [ID_Artista]) 
  ArtistaID Int
  Genero String
  Album Album @relation(fields: [AlbumID], references: [ID_Album])
  AlbumID Int
  Num_Streams Int
  Data_Lancamento DateTime
  Usuarios Usuario[]
}

model Artista {
  ID_Artista Int @id @default(autoincrement())
  Nome String 
  Foto String?
  Num_Streams BigInt
  Musicas Musica[]
  Albuns Album[]
}

model Album {
  ID_Album Int @id @default(autoincrement())
  Nome String
  Artista Artista @relation(fields: [ArtistaID], references: [ID_Artista])
  ArtistaID Int
  Data_Lancamento DateTime
  Capa String?
  Num_Musicas Int
  Musicas Musica[]
}

