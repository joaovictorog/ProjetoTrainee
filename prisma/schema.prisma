// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  ID_Usuario Int @id @default(autoincrement())
  Email String @unique
  Nome  String
  Senha String
  Plano String
  Foto  String?
}

model Musica {
  ID_Musica Int @id @default(autoincrement())
  Nome String
  ID_Artista Int
  Genero String
  ID_Album Int
  Num_Streams Int
  Data_Lancamento DateTime
}

model Artista {
  ID_Artista Int @id @default(autoincrement())
  Nome String
  Foto String
  Num_Streams Int
}

model Album {
  ID_Album Int @id
  ID_Artista Int @unique
  Data_Lancamento DateTime
  Num_Musicas Int
}

model Musicas_Usuario {
  ID Int @id
  ID_Usuario Int @unique
  ID_Musica Int
  Data_Criacao DateTime
}

