// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  ID_Usuario Int @id @default(autoincrement())
  Email String @unique
  Nome  String
  Senha String
  Plano String
  Foto  String?
  Musicas Musicas_Usuario[]
}

model Musica {
  ID_Musica Int @id @default(autoincrement())
  Nome String
  Artista Artista @relation(fields: [ArtistaID], references: [ID_Artista]) 
  ArtistaID Int
  Genero String
  Album Album @relation(fields: [AlbumID], references: [ID_Album])
  AlbumID Int
  Num_Streams Int
  Data_Lancamento DateTime
  Musicas_Usuario Musicas_Usuario[]
}

model Musicas_Usuario {
  Usuario Usuario @relation(fields: [UsuarioID], references: [ID_Usuario])
  UsuarioID Int
  Musica Musica @relation(fields: [ID_Musica], references: [ID_Musica])
  ID_Musica Int
  Data_Criacao DateTime

  @@id([UsuarioID, ID_Musica])
}
model Artista {
  ID_Artista Int @id @default(autoincrement())
  Nome String 
  Foto String
  Num_Streams Int
  Musicas Musica[]
  Albuns Album[]
}

model Album {
  ID_Album Int @id
  Artista Artista @relation(fields: [ArtistaID], references: [ID_Artista])
  ArtistaID Int
  Data_Lancamento DateTime
  Num_Musicas Int
  Musicas Musica[]
}

